<?xml version="1.0" encoding="utf-8" ?>
<context package="zhy2002.examples.register" ruleImplSuffix="Impl">
    <Register>
        <children>
            <Username baseType="String" required="true" minLength="4" disallowedChars="#">
                <Rules>
                    <SetDefaultEmail defaultEmailSffix="@gmail.com"/>
                </Rules>
            </Username>
            <Email baseType="String" pattern="\w+@\w+.[\w.]+" trackChangeReason="true"/>
            <Password baseType="String" required="true">
                <Rules>
                    <CheckValuePasswordStrength/>
                </Rules>
            </Password>
            <RepeatPassword baseType="String">
                <Rules>
                    <CheckPasswordRepeat>
                        <PasswordNode path="parent.passwordNode"/>
                    </CheckPasswordRepeat>
                </Rules>
            </RepeatPassword>
            <Age baseType="Integer" min="0" max="120"/>
            <ReceiveOffers baseType="Boolean">
                <rules>
                    <SetEmailRequired/>
                </rules>
            </ReceiveOffers>
            <OwnInvestmentProperty baseType="Boolean">
                <rules>
                    <LoadInvestmentProperty/>
                </rules>
            </OwnInvestmentProperty>
            <ResidentialProperty baseType="PropertyDetails"/>
            <InvestmentProperty baseType="PropertyDetails"/>
            <HomePhoneNode baseType="PhoneInfo"/>
            <ErrorList baseType="List">

            </ErrorList>
        </children>

        <childTypes>
            <PhoneInfo baseType="Object">
                <children>
                    <CountryCode/>
                    <AreaCode/>
                    <PhoneNumber/>
                </children>
                <rules>
                    <PhoneInfoCompleteOrNothing/>
                </rules>
            </PhoneInfo>
            <PropertyDetails baseType="Object">
                <children>
                    <PropertyAddress baseType="String"/>
                    <PropertyState baseType="String" required="true"/>
                </children>
            </PropertyDetails>
        </childTypes>

        <rules>
            <UpdateErrorNodeList/>
        </rules>
    </Register>
</context>